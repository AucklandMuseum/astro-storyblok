---
import Themes from "astro-themes";
import ToggleTheme from "../components/common/ToggleTheme.astro";
import BaseHead from "../components/common/BaseHead.astro";
import BasicScripts from "../components/common/BasicScripts.astro";
import MegaNavLayout from "../components/common/MegaNavLayout.astro";
import type { ISbStoryData } from "@storyblok/astro";

interface Props {
  page: ISbStoryData;
  section?: ISbStoryData;
}

const { page, section } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead page={page} section={section} />
    <Themes />
    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-149E0ZFVZ8"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-149E0ZFVZ8");
    </script>
  </head>
  <body class="bg-white dark:text-slate-300 dark:bg-black">
    <!-- <ToggleTheme /> -->
    <MegaNavLayout />
    <slot />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
    <script
      type="text/partytown"
      src="https://cdn.scaleflex.it/plugins/js-cloudimage-responsive/latest/js-cloudimage-responsive.min.js"
    ></script>
    <script type="text/partytown" defer>
      const ciResponsive = new window.CIResponsive({
        token: "ajrctguoxo",
      });
    </script>
  </body>
</html>
