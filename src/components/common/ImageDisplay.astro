---
import Cloudimage from "../react/Cloudimage";

const { blok } = Astro.props;
const params = "org_if_sml=0&force_format=webp,jpeg&func=cropfit&gravity=face";
---

<Cloudimage
  client:only="react"
  src={blok?.filename}
  alt={blok?.alt}
  params={params}
/>

<style>
  Cloudimage {
    @apply max-w-full;
  }
</style>
